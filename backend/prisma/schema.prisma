generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hod {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
}

model Teacher {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
}

model Student {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  teams    TeamMember[]
  createdAt DateTime  @default(now())
}

model Team {
  id            Int          @id @default(autoincrement())
  name          String
  competition   Competition  @relation(fields: [competitionId], references: [id])
  competitionId Int
  members       TeamMember[]
  createdAt     DateTime     @default(now())
}

model TeamMember {
  id        Int     @id @default(autoincrement())
  student   Student @relation(fields: [studentId], references: [id])
  studentId Int
  role      Role
  team      Team    @relation(fields: [teamId], references: [id])
  teamId    Int

  @@unique([studentId, teamId])
}

model Competition {
  id        Int       @id @default(autoincrement())
  name      String
  url       String
  about     String?
  date      DateTime
  deadline  DateTime
  teams     Team[]
  createdAt DateTime  @default(now())
}


enum Role {
  LEADER
  MEMBER
}
